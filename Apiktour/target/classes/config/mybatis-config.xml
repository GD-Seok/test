<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
 <!-- Mybatis에서 모든 SQL 구문의 xml 파일을 등록시켜줄 xml -->
 
<configuration>

    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    
    <!-- typeAliases 생략 가능 -->
    <typeAliases>
		<typeAlias alias="boardVO" type="com.apik.tiles.vo.BoardVO"/>
		<typeAlias alias="courseVO" type="com.apik.tiles.vo.CourseVO"/>
		<typeAlias type="com.apik.tour.person.command.PersonCommand" alias="personDto"/>
    </typeAliases>    

 	<!-- mappers 필수 (어떤 table을 불러와라) 
 		불러올 table의 정보를 가진 xml 파일을 지정할 때 사용 -->
	<mappers>
	    <mapper resource="sqlmap/CourseSQL.xml"/>
	    <mapper resource="com.apik.tour.person.service/Person.xml"/>
	</mappers>
	
</configuration>



      


